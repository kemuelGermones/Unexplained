<% layout('layout/post') %>
<div class="card mb-3">
  <div class="card-body">
    <h1 class="card-title"><%= user.username %></h1>
    <p class="card-text"><%= user.email %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Posts: <%= posts.length %></li>
  </ul>
</div>
<% for (let post of posts) { %>
<div class="card mb-3">
  <div class="card-body">
    <div class="bg-secondary">
      <% if (post.images.length) { %>
      <img src="<%= post.images[0].url %>" class="d-block mx-auto img-fluid" alt="..." />
      <% } %>
    </div>
    <h5 class="card-title mt-2">
      <a href="/posts/<%= post._id %>"> <%= post.title %> </a>
    </h5>
    <p class="card-text"><%= post.description %></p>
    <p class="card-text text-muted">Posted by: <%= post.author.username %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item text-muted">
      Comments: <%= post.comments.length %>
    </li>
    <li class="list-group-item text-muted">Category: <%= post.category %></li>
    <% if (currentUser && post.author.equals(currentUser)) { %>
    <li class="list-group-item">
      <a href="/posts/<%= post._id %>/edit" class="btn btn btn-outline-secondary"><i class="bi bi-pencil"></i> Edit</a>
      <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" class="d-inline">
        <button class="btn btn btn-outline-secondary">
          <i class="bi bi-trash"></i> Delete
        </button>
      </form>
    </li>
    <% } %>
  </ul>
</div>
<% } %>