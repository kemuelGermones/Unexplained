<% layout('layout/post') %>
<div class="card mb-3">
  <div class="card-body">
    <% if (post.images.length) { %>
    <div id="carouselExampleControls" class="carousel slide mb-2 bg-secondary" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% post.images.forEach((img, index)=> { %>
        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
          <img src="<%= img.url %>" class="d-block mx-auto img-fluid" alt="..." />
        </div>
        <% }) %>
      </div>
      <% if(post.images.length> 1) { %>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
      <% } %>
    </div>
    <% } %>
    <h5 class="card-title"><%= post.title %></h5>
    <p class="card-text"><%= post.description %></p>
    <p class="card-text text-muted">
      Posted by:
      <a href="/profile/<%= post.author._id %>"><%= post.author.username %></a>
    </p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item text-muted">
      Comments: <%= post.comments.length %>
    </li>
    <li class="list-group-item text-muted">Category: <%= post.category %></li>
    <% if (currentUser && post.author.equals(currentUser)) { %>
    <li class="list-group-item">
      <a href="/posts/<%= post._id %>/edit" class="btn btn btn-outline-secondary"><i class="bi bi-pencil"></i> Edit</a>
      <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" class="d-inline">
        <button class="btn btn btn-outline-secondary">
          <i class="bi bi-trash"></i> Delete
        </button>
      </form>
    </li>
    <% } %>
  </ul>
</div>

<% if (currentUser || post.comments.length) { %>
<div class="card mb-3">
  <ul class="list-group list-group-flush">
    <% if (currentUser) { %>
    <li class="list-group-item">
      <form action="/posts/<%= post._id %>/comments" method="POST" class="needs-validation mb-3" novalidate>
        <div class="mb-3">
          <label for="opinion" class="form-label">Comment:</label>
          <textarea class="form-control" id="opinion" name="opinion" rows="5" placeholder="What do you think?" required></textarea>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="d-grid mb-3">
          <button class="btn btn-outline-dark">Submit</button>
        </div>
      </form>
    </li>
    <% } %> <% for (let comment of post.comments) { %>
    <li class="list-group-item">
      <p class="card-text text-muted">
        Posted by:
        <a href="/profile/<%= comment.author._id %>"><%= comment.author.username %></a>
      </p>
      <p class="card-text"><%= comment.opinion %></p>
      <% if (currentUser && comment.author.equals(currentUser)) { %>
      <form class="d-flex" method="POST" action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=DELETE">
        <button class="btn btn-outline-secondary">
          <i class="bi bi-trash"></i> Delete
        </button>
      </form>
      <% } %>
    </li>
    <% } %>
  </ul>
</div>
<% } %>